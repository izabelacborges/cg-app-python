CGraphicsMenu:

<CGraphicsMenu@BoxLayout>
    orientation: "vertical"
    padding: 10
    spacing: 10
    
    canvas:
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: 1, 1, 1, 1

    BoxLayout:
        height: "30dp"
        size_hint_y: None
        spacing: 10
        TextInput:
            hint_text: "X1"
            multiline: False
            padding_y: "6dp"
            padding_x: "10dp"
            size_hint_x: 0.122
        TextInput:
            hint_text: "Y1"
            multiline: False
            padding_y: "6dp"
            padding_x: "10dp"
            size_hint_x: 0.122
        TextInput:
            hint_text: "X2"
            multiline: False
            padding_y: "6dp"
            padding_x: "10dp"
            size_hint_x: 0.122
        TextInput:
            hint_text: "Y2"
            multiline: False
            padding_y: "6dp"
            padding_x: "10dp"
            size_hint_x: 0.122
        TextInput:
            hint_text: "Eixo X"
            multiline: False
            padding_y: "6dp"
            padding_x: "10dp"
            size_hint_x: 0.122
        TextInput:
            hint_text: "Eixo Y"
            multiline: False
            padding_y: "6dp"
            padding_x: "10dp"
            size_hint_x: 0.122
        Label:
            text: "Multiply for"
            color: 0, 0, 0, 1
            halign: "center"
            valign: "middle"
            size_hint_x: 0.122
        TextInput:
            hint_text: "Scale"
            multiline: False
            padding_y: "6dp"
            padding_x: "10dp"
            size_hint_x: 0.122

    BoxLayout:
        height: "30dp"
        size_hint_y: None
        spacing: 10
        Button:
            text: "DDA"
            size_hint_x: 0.25
        Button:
            text: "Bresenham"
            size_hint_x: 0.25
        Button:
            text: "Translation"
            size_hint_x: 0.25
        Button:
            text: "Scaling"
            size_hint_x: 0.25

    BoxLayout:
        height: "30dp"
        size_hint_y: None
        spacing: 10
        Button:
            text: "Parametric Equation"
            size_hint_x: 0.25
        Button:
            text: "Circumference"
            size_hint_x: 0.25
        TextInput:
            hint_text: "Degree"
            multiline: False
            padding_y: "6dp"
            padding_x: "10dp"
            size_hint_x: 0.121
        Button:
            text: "Rotation"
            size_hint_x: 0.122
        Button:
            text: "Crop"
            size_hint_x: 0.121
        Button:
            text: "Clear"
            size_hint_x: 0.122